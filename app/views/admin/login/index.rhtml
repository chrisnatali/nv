<% @page_title = "Login" -%>
<%= error_messages_for(:user) %>

<form action='/admin/login'  method='post'>
  <table>
    <tr>
      <td>User name:</td>
      <td><%= text_field("user", "name") %></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><%= password_field("user", "password") %></td>
    </tr>
    <tr>
      <td></td>
      <td><input type="submit" value="Login" /></td>
    </tr>
  </table>
</form>
